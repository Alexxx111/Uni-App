<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.unimate.DescriptionActivity"
    tools:showIn="@layout/activity_description">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <!-- TextView and other stuff -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@android:drawable/ic_menu_recent_history"
            android:layout_below="@+id/message_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/time_label"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:paddingBottom="8dp"
            android:layout_alignBottom="@+id/start_time_text"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00"
            android:paddingTop="22dp"
            android:id="@+id/start_time_text"
            android:layout_above="@+id/description_text"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00"
            android:id="@+id/end_time_text"
            android:paddingTop="17dp"
            android:layout_alignBottom="@+id/start_time_text"
            android:layout_toEndOf="@+id/start_time_text"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/description_text"
            android:paddingTop="70dp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_image"
            android:src="@android:drawable/ic_menu_mylocation"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:layout_alignTop="@+id/description_text"
            android:layout_toStartOf="@+id/time_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/location_label"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:paddingBottom="8dp"
            android:layout_alignBottom="@+id/location_image"
            android:layout_toEndOf="@+id/location_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location"
            android:id="@+id/location_text"
            android:layout_alignBottom="@+id/location_label"
            android:layout_alignStart="@+id/start_time_text"
            android:paddingBottom="5dp" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
