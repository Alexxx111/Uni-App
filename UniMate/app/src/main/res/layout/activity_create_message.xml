<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unimate.CreateMessageActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/message_text"
        android:hint="@string/newMessage"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:text="@string/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_message_button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/message_text"
        app:layout_constraintTop_toBottomOf="@+id/message_text"
        app:layout_constraintLeft_toLeftOf="@+id/message_text"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/send"
        style="@style/Widget.AppCompat.Button.Colored" />
</android.support.constraint.ConstraintLayout>
